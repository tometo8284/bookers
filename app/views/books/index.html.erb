<h2>New Book</h2>
<% if @book.errors.any? %>
<div class="error_box">
  <div class="error_title">
    <%= @book.errors.count %> errors prohibited this book from being saved:
  </div>
  <div class="error_body">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>

<%= form_with model: Book.new do |f| %>
  <h3>Title</h3>
  <%= f.text_field :title %>

  <h3>Body</h3>
  <%= f.text_area :body %>

  <div>
    <%= f.submit 'Create Book' %>
  </div>

<% end %>